---
import Header from "@components/astro/Header.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/logo.svg">
    <title>{title}</title>
  </head>
  <body class="h-screen flex flex-col px-[16px] bg-[#1B191A]">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>
