---
import Header from "@components/astro/Header.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/logo.svg">
    <title>{title}</title>
  </head>
  <body class="h-screen flex justify-center bg-[#1B191A]">
    <div class="w-full max-w-[1250px] flex flex-col px-[16px]">
      <Header />
	<main class="flex-1">
	  <slot />
	</main>
	<slot name="footer" />
    </div>
  </body>
</html>
